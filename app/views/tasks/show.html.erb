<h1><%= @task.title %></h1>
<p><%= @task.details %></p>
<% if @task.completed == true %>
<%= "task done" %>
<% else %>
<%= "task not done" %>
<% end %>

<%= link_to "Back to list", tasks_path %>
<%= link_to "Edit tasks", edit_task_path %>
<%= link_to "Delete #{@task.title}",
            task_path(@task),
            method: :delete,
            data: { confirm: "Are you sure?" } %>
